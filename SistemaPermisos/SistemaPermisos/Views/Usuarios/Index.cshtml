
@{
    ViewBag.Title = "Usuarios";
}


<script src="~/Scripts/Generals.js"></script>
<script src="~/Scripts/Usuarios.js"></script>



<h2>Usuarios</h2>



<div id="container">

</div>


<div class="modal" tabindex="-1" role="dialog" id="modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">

                <form class="form-row" id="form">

                    <div class="col-sm">
                        <label for="ID">Id</label>
                        <input type="text" class="form-control" id="ID" name="ID">
                    </div>

                    <div class="col-sm">
                        <label for="NOMBRE">Nombre</label>
                        <input type="text" class="form-control" id="NOMBRE" name="NOMBRE" required>
                    </div>

                </form>


                <form class="form-row">
                    <div class="col-sm-6">
                        <label for="ROL">Rol</label>
                        <select type="text" class="form-control dropdown" id="VALUE" name="ID_ROL" required style="height:34PX;"></select>
                    </div>
                </form>



                <div class="col-sm mt-5 d-flex justify-content-end">
                    <button type="button" class="btn btn-primary mr-3" id="BtnEnviar" onclick="Add()">Enviar</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                </div>


            </div>


        </div>
    </div>
</div>